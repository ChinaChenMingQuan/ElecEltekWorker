{
    // 是否自动编译.
    "compileOnSave": true,
    // 编译选项.
    "compilerOptions": {
        // Type Checking
        // <!-- 是否忽略未执行的代码. -->
        "allowUnreachableCode": true,
        // <!--!-->
        // <!-- 是否忽略未使用的标签. -->
        "allowUnusedLabels": false,
        // <!--!-->
        // <!-- 是否开启 ECMAScript 严格模式. -->
        "alwaysStrict": true,
        // <!--!-->
        // <!-- 是否开启可空类型. -->
        "exactOptionalPropertyTypes": true,
        // <!--!-->
        // <!-- 是否开启 switch 检查. -->
        "noFallthroughCasesInSwitch": true,
        // <!--!-->
        // <!-- 是否禁止给没有指定类型的参数设置成 any 类型. -->
        "noImplicitAny": true,
        // <!--!-->
        // <!-- 是否禁止给没有重写的类函数添加 override 关键字. -->
        "noImplicitOverride": true,
        // <!--!-->
        // <!-- 是否禁止给没有返回路径的函数添加返回类型的默认值. -->
        "noImplicitReturns": true,
        // <!--!-->
        // <!-- 是否禁止给 this 的类型设置成 any 类型. -->
        "noImplicitThis": false,
        // <!--!-->
        // <!-- 是否禁止给类内未命名的字段用陌生名称来访问. -->
        "noPropertyAccessFromIndexSignature": true,
        // <!--!-->
        // <!-- 是否禁止给类内未命名的字段检测为 string 类型. -->
        "noUncheckedIndexedAccess": true,
        // <!--!-->
        // <!-- 是否检查未使用的局部变量. -->
        "noUnusedLocals": false,
        // <!--!-->
        // <!-- 是否检查未使用的函数参数. -->
        "noUnusedParameters": false,
        // <!--!-->
        // <!-- 是否检查所有类型. -->
        "strict": true,
        // <!--!-->
        // <!-- 是否检查 bind call apply 函数绑定的参数. -->
        "strictBindCallApply": true,
        // <!--!-->
        // <!-- 是否检查函数参数双向协变. -->
        "strictFunctionTypes": true,
        // <!--!-->
        // <!-- 是否检查空值. -->
        "strictNullChecks": true,
        // <!--!-->
        // <!-- 是否检查类内未初始化的字段. -->
        "strictPropertyInitialization": true,
        // <!--!-->
        // 是否开启 catch 的 any 类型设置成 unknown 类型. -->
        "useUnknownInCatchVariables": true,
        // <!--!-->
        // Modules
        // <!-- 指定模块系统. -->
        "module": "ES2022",
        // <!--!-->
        // Emit
        // <!-- 是否为迭代器提供完全支持. -->
        //"downlevelIteration": true,
        // <!--!-->
        // <!-- 是否生成带 BOM 的编码. -->
        "emitBOM": false,
        // <!--!-->
        // <!-- 指定生成文件的行尾序列. -->
        "newLine": "crlf",
        // <!--!-->
        // <!-- 是否移除生成文件里的注释. -->
        "removeComments": true,
        // <!--!-->
        // <!-- 是否生成 Source Map 文件 ( 可帮助在调试时定位错误 ). -->
        "sourceMap": true,
        // <!--!-->
        // <!-- 是否在出现错误后, 停止编译. -->
        "noEmitOnError": false,
        // <!--!-->
        // <!-- 指定生成文件的路径与名称. -->
        //"outFile": "*.js",
        // <!--!-->
        // Language and Environment
        // <!-- 指定 ECMAScript 目标版本. -->
        "target": "ES2022"
        // <!--!-->
    },
    // 包含链表.
    "include": [
        "./**/*"
    ]
    // 排除链表.
    //"exclude": [
    //    "./vendor/**/*"
    //]
}